{{!
    @template local_musi/page_teacher

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}


<div class="card-deck">
    {{#teachers}}
        <div class="card">
            {{#link}}<a href="{{.}}">{{/link}}
                {{#image}}<img src="{{.}}" class="card-img-teacher rounded-circle p-3">{{/image}}
                <div class="card-body">
                    <h1 class="card-title font-weight-bold">{{firstname}} {{lastname}}</h1>
                    <p class="card-description">{{{description}}}</p>

                </div>
                <div class="card-footer">
                    <p class="card-phone1">{{#str}}phone{{/str}}: {{phone1}}</p>

                    <nav>
                    <div class="nav nav-pills mb-3" id="nav-tab" role="tablist">
                        {{#optiontables}}
                        <a class="nav-link rounded {{class}}" id="nav-tab-{{tablename}}" data-toggle="tab" href="#nav-table-{{tablename}}" role="tab" aria-controls="nav-tab-{{tablename}}">
                            {{#str}}courses, local_musi{{/str}} - {{bookinginstancename}}
                        </a>
                        {{/optiontables}}
                    </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        {{#optiontables}}
                        <div class="tab-pane fade {{class}}" id="nav-table-{{tablename}}" role="tabpanel" aria-labelledby="nav-tab-{{tablename}}">{{{table}}}</div>
                        {{/optiontables}}
                    </div>

                </div>
            {{#link}}</a>{{/link}}
        </div>
    {{/teachers}}
</div>